#!/bin/sh

SSH_USER=${SSH_USER:-git} \
SSH_PRIVATE_KEY=${SSH_PRIVATE_KEY:-$(heroku config:get SSH_PRIVATE_KEY)} \
SSH_PUBLIC_KEY=${SSH_PUBLIC_KEY:-$(heroku config:get SSH_PUBLIC_KEY)} \
GITHUB_REPO_READ_TOKEN=${GITHUB_REPO_READ_TOKEN:-$(heroku config:get GITHUB_REPO_READ_TOKEN)} \
GITHUB_REPO_STATUS_WRITE_TOKEN=${GITHUB_REPO_STATUS_WRITE_TOKEN:-$(heroku config:get GITHUB_REPO_STATUS_WRITE_TOKEN)} \
JIRA_FQDN=${JIRA_FQDN:-$(heroku config:get JIRA_FQDN)} \
JIRA_PASSWD=${JIRA_PASSWD:-$(heroku config:get JIRA_PASSWD)} \
JIRA_PATH=${JIRA_PATH:-$(heroku config:get JIRA_PATH)} \
JIRA_USER=${JIRA_USER:-$(heroku config:get JIRA_USER)} \
foreman start --port 1201
