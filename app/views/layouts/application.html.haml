!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title ShipmentTracker
    = stylesheet_link_tag    'application', media: 'all'
    = csrf_meta_tags
  %body

    .navbar.navbar-default
      .container
        .navbar-header
          %a.navbar-brand{href: '/'}
            Shipment Tracker
        %ul.navbar-nav.nav
          %li
            = link_to 'Issues', '/issue_audits'
          %li
            = link_to 'Repository locations', '/repository_locations'
    .container
      - if flash[:error]
        .flash.error= flash[:error]
      = yield
