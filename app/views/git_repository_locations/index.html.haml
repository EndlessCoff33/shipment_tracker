- title 'Repository Locations'

= form_for(@new_git_repository_location, class: 'form-horizontal') do |form|
  .form-group.row
    = form.label(:name, class: 'col-md-1 control-label')
    .col-md-4
      = form.text_field(:name, class: 'form-control')
  .form-group.row
    = form.label(:uri, 'URI', class: 'col-md-1 control-label')
    .col-md-4
      = form.text_field(:uri, class: 'form-control')
  .form-group.row
    .col-md-offset-1.col-md-4
      = form.submit(class: 'btn btn-primary')


- table headers: ["Name", "URI"], classes: 'git_repository_locations' do
  - @git_repository_locations.each do |git_repository_location|
    %tr
      %td= git_repository_location.name
      %td= git_repository_location.uri
